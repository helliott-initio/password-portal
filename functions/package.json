{
  "name": "password-portal-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Password Portal",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.3",
    "nodemailer": "^7.0.12",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
